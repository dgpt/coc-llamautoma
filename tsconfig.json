{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types", "node", "./src/coc.nvim.d.ts"]
  },
  "include": ["src/*", "src/**/*", "tests/**/*", "src/coc.nvim.d.ts"],
  "exclude": ["node_modules", "dist"]
}
